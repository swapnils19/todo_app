
<div class="clear center">
  <h3 class="center">Todos</h3>
</div>
<div class="clear">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Todo name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.todo_name %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Delete Todo', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="clear">
<% if User.admin?(current_user) %>
  <%= link_to 'New Todo', new_todo_path, class: 'btn btn-default' %>
  <%= link_to 'Projects', projects_path, class: 'btn btn-default' %>
<% end %>
</div>
<br>